		int x;
		double y;
		
		x = 5;
		
		y = 2 * x;
		
		System.out.println("Exemplo 02:");
		System.out.println(x);
		System.out.println(y);
		
		double b, B, h, area;
		
		b = 6.0;
		B = 8.0;
		h = 5.0;
		
		area = (b + B)/ 2.0 * h;
		
		System.out.println();
		System.out.println("Exemplo 03:");
		System.out.println(area);
		
		int a, b3;
